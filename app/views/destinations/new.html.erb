<h1>Create a new destination</h1>

<%= form_for @destination do |f| %>
  <div class="field">
  <%= f.label :name %>
  <%= f.text_field :name %>
  </div>
  <br>
  <div class="field">
  <%= f.label :country %>
  <%= f.text_area :country %>
  </div>
  <br>
  <div class="action">
  <%= f.submit %>
  </div>
  <% end %>
<br>
<%= link_to "All destinations", destinations_path %>
